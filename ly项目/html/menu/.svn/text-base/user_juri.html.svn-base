<!DOCTYPE html>
<html >
	<head>
		<meta charset="UTF-8">
		<title>人员权限管理</title>
		<link type="text/css" rel="stylesheet" href="../../bs/css/bootstrap.min.css" />
   		<link type="text/css" rel="stylesheet" href="../../css/style.css" />
   		<link type="text/css" rel="stylesheet" href="../../bs/css/zTreeStyle.css" />     		
  		<script type="text/javascript" src="../../bs/js/jquery-1.11.3.min.js" ></script>
		<script type="text/javascript" src="../../bs/js/angular.min.js" ></script>
		<script type="text/javascript" src="../../bs/js/bootstrap.min.js" ></script>
		<script type="text/javascript" src="../../bs/js/jquery.ztree.all-3.5.js" ></script>
   		<script type="text/javascript" src="../../bs/js/jquery.ztree.core.js" ></script>
		<script type="text/javascript" src="../../bs/js/jquery.ztree.excheck.js" ></script>
		<script type="text/javascript" src="../../js/url.js" ></script>
   		<script src="js/user_juri.js"></script>
   		<style type="text/css">
			body{
				font-size:1.3em;
			}
			.panel-body{overflow: hidden;}
				 .softtm{
				 	width: 98%;
				 	height: 40px;
				 	background: url(../../image/nav213.png) repeat-x;
				 	border-bottom-style:1px solid  #cacaca;
				 }
				 .softtm .top_text{
				  	color:#fff;
				    left: 20px;
				    line-height: 40px;		  	
				 }				 		
				.c_lf{
					height: 90%;
				}
				.lf_top{
					height: 25px;
				}
				.lf_bottom{
					width: 99%;
					height:360px;
					border: 1px solid #0c0b0b;
					overflow: hidden;
					background: #F2F9FF;
					overflow-y: scroll;				
				}
				.lf_bottom input{
					margin:6px 5px;
				}
				.rt_top{
					height: 25px;
				}
				.rt_bottom{
					height: 360px;
					border: 1px solid #0c0b0b;
					background: #F2F9FF;
					overflow-y: scroll;	
				}	
				.so{
					overflow-y: scroll;	
				}
				#reset{
					display:none;
				}
		</style>
	</head>
	<body ng-app="user">
		<div class="row show-grid" style="padding: 1% 0% 0% 4%;" ng-controller="userCtrl">
          	<div class="col-md-4 col-xs-4 col-sm-4 c_lf">
	          	<div class="lf_top col-md-12 col-xs-12 col-sm-12" >
					<span>咨询人员</span>
					<input type="hidden" id="projId" value="${projId}">
				</div>
				<div class="lf_bottom col-md-12 col-xs-12 col-sm-12" >
					<table class="col-md-12 col-xs-12 col-sm-12">
						<tbody>
							<tr ng-repeat= "user in users">
								<td>
									<input type="radio" ng-click="listur(user.userId);" name="user"  ng-checked="false" value="{{user.userId}}">{{user.alias}}</input>
								</td>
							</tr>
						</tbody>
				 	</table>
				</div>
           </div>
           <div class="col-md-6 col-xs-6 col-sm-6">
           		<div class="rt_top col-md-12 col-xs-12 col-sm-12" >
				<span>权限列表</span>
				</div>
				<div class="rt_bottom col-md-12 col-xs-12 col-sm-12">
					<ul id="tree" class="ztree"></ul>
				</div>
				<div class="rt_top col-md-12 col-xs-12 col-sm-12" >
				</div>
				<button class="btndel-handle1 "  type="button" ng-click="save()">
						<span>保存</span>
				</button>
			</div>
	        <div class="col-md-2 col-xs-2 col-sm-2">
	          	<button class="btndel-handle1"  type="button" onclick="reset()"  id="reset">
					<span>重置</span>
				</button>
	        </div>
     	</div>
	</body>
</html>

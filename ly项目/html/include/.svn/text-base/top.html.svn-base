<!DOCTYPE HTML>
<html ng-app="top">
	<head>
		<title>业务协同平台</title>
		<meta charset="utf-8">
		<meta http-equiv="access-Control-allow-Origin" content="*">
		<link rel="stylesheet" href="../../bs/css/bootstrap.min.css">  
		<link rel="stylesheet" href="../../css/main.css" />
		<link rel="stylesheet" href="../../css/style.css" />
		<script type="text/javascript" src="../../bs/js/jquery-1.11.3.min.js" ></script>
		<script type="text/javascript" src="../../bs/js/angular.min.js" ></script>
		<script type="text/javascript" src="../../js/url.js" ></script>
	</head>
	<body  ng-controller="topCtrl">
		<form id="form0" action="" method="post">
		
			<div style="vertical-align: middle;">
				<table width="100%" height="50" style="vertical-align: middle; background:url(../../img/top13.png) repeat-x;" >
					<tr>
						<td width="350" style="padding-left: 20px;">
							<img alt="Logo" src="../../img/logo1.png">
						</td>
						
						<td align="right">
							<font style="color: white;"> 欢迎:</font>	
							<FONT style="color: white; font-size: medium; margin-left: 5px;" ng-model="alias">{{alias}}
							</FONT>
							<font  style="color: white; font-size: medium; margin:0px 20px;"> 
							<button  class="btn btndel-handle1" type="button" ng-click="exitSystem()">退出平台</button>
							</font>
						</td>												
					</tr>
				</table>
			</div>
		</form>
		<script>
			angular.module('top', []).controller('topCtrl', function($scope, $http) {
				var url=urlpath+"main/include/top1.do";
			    $http.get(url).success(function (result) {
					$scope.alias=result.alias;
			    });
			    $scope.exitSystem=function(){
			    	window.parent.location.href="../../index.html";
			    }
			});
		</script>
	</body>
</html>
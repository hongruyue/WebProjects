<!DOCTYPE html>
<html ng-app="myApp">
	<head>
		<meta charset="UTF-8">
		<title>元数据列表</title>
		<link rel="stylesheet" href="../../bs/css/bootstrap.min.css">  
		<link rel="stylesheet" href="../../css/main.css" />
		<link rel="stylesheet" href="../../css/style.css" />
		<script type="text/javascript" src="../../bs/js/jquery-1.11.3.min.js" ></script>
		<script type="text/javascript" src="../../bs/js/angular.min.js" ></script>
		<script type="text/javascript" src="../../bs/js/bootstrap.min.js" ></script>
		<script type="text/javascript" src="../../js/url.js" ></script>
		<script type="text/javascript" src="js/metadata.js" ></script>
		<script src="../../bs/js/jquery.page.js"></script>
	</head>
	<body  ng-controller="metadataCtrl">
		<div id="man_zone" class="mianbody">
			<div class="softtm">
			</div>
			<div class="row show-grid" style="padding: 1% 1% 1% 1%;">
				<div class="col-md-12 col-xs-12 col-sm-12">
					<button type="button" class="btn btndel-handle1" ng-click="addMetaData();">&nbsp;&nbsp; 添加 &nbsp;&nbsp;</button><br />
				</div>
				<div class="col-md-12 col-xs-12 col-sm-12" >
					<div class="table-responsive">
						<table class="table table-bordered table-hover table-condensed">
							<thead>
								<tr>
									<th width="4%">序号</th>
								   	<th width="18%">中文名称</th>
								   	<th width="12%">英文名称</th>
								   	<th width="10%">字段类型</th>
								   	<th width="5%">长度</th>
								   	<th width="5%">小数位数</th>
								   	<th width="10%">值域</th>	
								   	<th width="10%">备注信息</th>	
								   	<th width="10%">操作</th>	
								</tr>
							</thead>
						
						<tbody>
								<tr ng-repeat= "x in metadatas">
									<td>{{ $index+1 }}</td>
							   		<td>{{x.metadataCname}}</td>
							   		<td>{{x.metadataEname}}</td>
							   		<td>{{x.metadataType}}</td>
								   	<td>{{x.metadataLength}}</td>
								   	<td>{{x.metadataDecimal}}</td>
								   	<td>{{x.metadataRange}}</td>
								   	<td>{{x.metadataRemark}}</td>
								   	<td><a ng-click="updateMeta(x)">修改</a> <a ng-click="deleteMeta(x.metadataId)">删除</a></td>
								</tr>
						</tbody>
						</table>
					</div>
				</div>
				<!--分页  -->
				<div class="tcdPageCode"></div>
			</div>
		</div>
	</body>
</html>

	<body ng-controller="updateOrgCtrl">
		<div id="man_zone" class="mianbody">
			<div class="softtm"></div>
			<div class="row show-grid" style="padding: 1% 1% 0% 1%;">
				<div class="col-md-12 col-xs-12 col-sm-12">
					<form id="updateForm" class="form-horizontal" name="updateForm">
						<input type="hidden" class="form-control col-sm-3" id="id" name="id" value="{{organization.id}}">
						<div class="form-group">
							<label for="organizationName" class="col-sm-1 control-label"><nobr>组织机构名称</nobr></label>
							<div class="col-sm-5">
								<input type="text" data-validation-engine="validate[required,custom[chineseFifteen]]" class="input form-control" id="organizationName" name="organizationName" value="{{organization.organizationName}}" placeholder="请输入组织结构名称">

							</div>
						</div>
						<div class="form-group">
							<label for="sname" class="col-sm-1 control-label"><nobr>组织机构区域</nobr></label>
							<div class="col-sm-5 input-group">
								<input type="text" class="form-control col-sm-3" id="sname" name="sname" value="{{areaName}}" readonly>

								<input type="hidden" class="form-control col-sm-3" id="sid" name="sid" value="{{areaid}}">
								<!--<span class="input-group-btn">
        							<button class="btn btn-default" type="button" data-toggle="modal" data-target="#myModal" onclick = "selectParent()">选择</button>
      					  		</span>-->
							</div>
						</div>

						<div class="form-group">
							<label for="organizationCode" class="col-sm-1 control-label"><nobr>组织机构代码</nobr></label>
							<div class="col-sm-5">
								<input type="text" data-validation-engine="validate[required,custom[organizacode]]" class="input form-control" id="organizationCode" name="organizationCode" value="{{organization.organizationCode}}" placeholder="请输入组织结构代码">
							</div>
						</div>

						<div class="col-md-12 col-xs-12 col-sm-12">
							<div class="col-md-1 col-xs-1 col-sm-1"></div>
							<div class="col-md-3 col-xs-3 col-sm-3">
								<button class="btn btndel-handle1" type="button" ng-click="rt()">返回</button>
							</div>
							<div class="col-md-5 col-xs-5 col-sm-5">
								<button class="btn btndel-handle1" ng-click="updateOrg()">保存</button>
							</div>
						</div>
					</form>
				</div>
			</div>
		</div>

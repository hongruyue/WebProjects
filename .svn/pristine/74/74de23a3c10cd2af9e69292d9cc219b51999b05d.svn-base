<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title></title>
</head>

<body>
<table border="1" style="border-collapse: collapse">
    <tbody>
    <tr>
        <th>姓名</th>
        <th>年龄</th>
        <th>分数</th>
        <th>删除</th>
    </tr>
    </tbody>
</table>
<button>点击获取</button>
<button>删除</button>
</body>
<script src="js/jquery-1.8.3.min.js"></script>
<script type="text/javascript">
    $(function(){
        $("button").eq(0).click(function(){
            $.ajax({
                url:"json",
                type:"get",
                dataType:"json",
                success:function(data){
                    $("tbody").empty();
                    var head="<tr><th>姓名</th><th>年龄</th><th>分数</th><th>删除</th></tr>";
                    $("tbody").append(head);
                    for(i=0;i<data.length;i++){
                        news="<tr><td>"+data[i].name+"</td><td>"+data[i].age+"</td><td>"+data[i].scole+"</td><td><input name='selected' type='checkbox' id='control' /><button>删除</button></td></tr>";
                        $("tbody").append(news);
                        // alert(data);
                        $("button").eq(i).click(function(){
                            var ipt=document.getElementsByTagName("input");
                            if(ipt.checked){
                                //alert("true");
                                $(this).parent().parent().remove();
                            }
                        })
                    }
                },
                error:function(){
                    alert("错误");
                },
                async:true,
            })


                    })


    })
</script>
</html>
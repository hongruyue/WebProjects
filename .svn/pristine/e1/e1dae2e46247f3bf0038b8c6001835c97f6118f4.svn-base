html{
    font-size: 100px;
    height: 100%;
}
body{
    height: 100%;
    position: relative;
}
.right{
    width: 3.18rem;
    height: 100%;
    position: fixed;
    top:1.4rem;
    right:0;
    z-index:3;
}
.right_top{
    width: 3.18rem;
    height: 0.48rem;
}
.right_top1{
    width: 2.48rem;
    height: 0.48rem;
    float: left;
    background: url("../img/logoq_4.jpg") 0 0 no-repeat;
    background-size: 100% 100%;
}
.right_top2{
    width: 0.7rem;
    height: 0.48rem;
    float:right;
    background: url("../img/return_index.jpg") 0 0 no-repeat;
    background-size: 100% 100%;
}
.right_bottom{
    width: 3.18rem;
    height: 4.66rem;
    overflow: scroll;
    display: none;
    background: url("../img/right.png") 0 0 no-repeat;
    background-size: 100% 100%;
}
.right22{
    width: 3.18rem;
    height: 0.77rem;
    cursor: pointer;
}
.right22:hover{
    background:#000000;
    opacity: 0.2;
}
.right_bottom img{
    width: 3.18rem;
}

.outer{
    width: 6.4rem;
    margin: 0 auto;
    height: 100%;

}
.header{
    width: 6.4rem;
    height: 1.62rem;
    position: relative;

}
.logo{
   width: 1.21rem;
    height: 1.62rem;
    background: url("../img/logoq_1.jpg") 0 0 no-repeat;
    background-size: 100% 100%;
    margin-left: 30px;
    position: absolute;
    z-index: 1;
}
.header_cen{
    width: 1.79rem;
    height: 1.62rem;
    float: left;
    margin-top: -0.3rem;
    background: url("../img/logoq_2.jpg") 0 0 no-repeat;
    background-size: 100% 100%;
    margin-left:1.8rem;
}
.header_right{
    width:1.85rem;
    height: 1.62rem;
    float: right;
    margin-top: -0.3rem;
    background: url("../img/logoq_3.jpg") 0 0 no-repeat;
    background-size: 100% 100%;
}
.content{
    width: 6.4rem;
    margin: 0 auto;
    position: absolute;
    background:#F1F1F1;
    top:1.4rem;
    padding-top:0.4rem;
}
.content_top{
    width: 6.4rem;
    height: 3.45rem;
    background: url("../img/part1_bg.jpg") 0 0 no-repeat;
    background-size: 100% 100%;
}
.content_cen{
    width: 6.4rem;
    height: 100%;

}
.box{
    width: 6.4rem;
}
.box2{
    display: none;
}
.h1{
    width: 6.1rem;
    height: 0.45rem;
    font-size: 0.3rem;
    line-height: 0.45rem;
    color:#CAAD73;
    padding-left: 0.3rem;
    background: url("../img/part2_nav1.jpg") 0 0 no-repeat;
    background-size: 100% 100%;
}
.h11{
    width: 6.1rem;
    height: 0.45rem;
    font-size: 0.3rem;
    line-height: 0.45rem;
    padding-left: 0.3rem;
    color:#971823;
    background: url("../img/part2_nav2.jpg") 0 0 no-repeat;
    background-size: 100% 100%;
}

.box p{
    width: 5.0rem;
    font-size: 0.3rem;
    line-height: 0.4rem;
    margin-left:1.0rem;

}

.box_con{
   width: 6.1rem;
    height: 2.74rem;
    background: url("../img/part2_bg1.jpg") 0 0 no-repeat;
    background-size: 100% 100%;
    padding-top: 0.3rem;
    padding-bottom: 0.1rem;
}

.box_con2{
    width: 6.1rem;
    height: 11.18rem;
    background: url("../img/part2_bg2.jpg") 0 0 no-repeat;
    background-size: 100% 100%;
    padding-top: 0.3rem;
    padding-bottom: 0.1rem;
}
.box_con3{
    width: 6.4rem;
    height:1.75rem;
    background: url("../img/part3_bg1.jpg") 0 0 no-repeat;
    background-size: 100% 100%;

}

.box_con3 h2{
    width: 6.1rem;
    height: 0.6rem;
    line-height: 0.6rem;
    color: #BDC197;
    font-size: 0.4rem;
    text-align: center;
    background: rgba(0,0,0,0.7);
    margin-top: 1.1rem;
    border-bottom: 0.2rem solid #990014;
}
.box_con3_b{
    width: 6.4rem;
    height: 3.6rem;
    position: relative;
    left:-0.3rem;
}
.box_con3_jt1{
    position: absolute;
    top:2.2rem;
    left:0
}
.box_con3_jt2{
    position: absolute;
    top:2.2rem;
    right:0
}
.box_con3_bottom h2{
    width: 6.3rem;
    height: 1.2rem;
    line-height:0.5rem;
    color: #BDC197;
    font-size: 0.26rem;
    background: rgba(0,0,0,0.7);
    padding-left: 0.1rem;
    position: absolute;
    top:4rem;

}
.box_con3_img2{
    position: absolute;
    top:5rem;
}
.footer{
    width: 6.4rem;
    height:3rem;
    color:#080808;
    margin: 0 auto;

}
.footer p{
    width: 4.22rem;
    height: 0.6rem;
    line-height: 0.6rem;
    font-size: 0.36rem;
    font-weight: bold;
    margin-left:0.6rem;
}
.footer_p{
    background: url("../img/r_number2.jpg") 0 0 no-repeat;
    background-size: 100% 100%;
    margin-bottom:0.1rem;
}
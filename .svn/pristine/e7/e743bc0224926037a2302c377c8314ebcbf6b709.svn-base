<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title></title>
    <style>
        *{
            margin: 0px;
            padding: 0px;
        }
        .box{
            width: 300px;
            height: 600px;
            margin: 0 auto;
            position: relative;
            margin-top:10px;
        }
        .pic{
            width:300px;
            height:400px;
            position: absolute;
        }
        .pic img{
            width: 300px;
            height: 400px;
            position: absolute;
            margin-top:10px;
        }
        .bt{
            position: absolute;
            left:300px;
            z-index: 2;
        }
        ul{
            list-style: none;
            opacity: 0.8;
        }
        li{
            width: 300px;
            height: 30px;
            text-align: center;
            line-height: 30px;
            background: #333333;
            color: #FFFFFF;
            position: absolute;
            top:360px;
            right:0px;
            display: none;
        }
        .point{
            position: absolute;
            top:200px;
            left:0px;
            z-index:3;
        }
        .leftp{
            float: left;
            margin-left: 10px;

        }
        .rightp{
            float: right;
            margin-left: 220px;
        }
        .number{
            width: 300px;
            height: 30px;
            line-height:30px;
            text-align: center;
            position: absolute;
            top:30px;
            z-index: 3;
            background: #999999;
            opacity: 0.7;
            color:#fff;
         }
        .img1{
            /*z-index: 2;*/
        }
      .li1{
          z-index: 3;
      }
    </style>
</head>
<body>
<div class="box">
    <button>循环切换</button>
    <button>顺序切换</button>
    <div class="pic">
         <img src="img1/1.jpg" class="img1">
         <!--<img src="img1/2.jpg">-->
         <!--<img src="img1/3.jpg">-->
         <!--<img src="img1/4.jpg">-->
         <!--<img src="img1/5.jpg">-->
    </div>
    <div class="bt">
        <ul>
            <li class="li1"><span>标题一</span></li>
            <li><span>标题二</span></li>
            <li><span>标题三</span></li>
            <li><span>标题四</span></li>
            <li><span>标题五</span></li>
        </ul>
    </div>
    <div class="number">
        <p><span class="numl">1</span>/<span class="numr">5</span></p>
    </div>
    <div class="point">
        <p class="leftp"><img src="img1/left.png"></p>
        <p class="rightp"><img src="img1/right.png"></p>
    </div>
</div>
</body>
<!--<script src="js/jquery-1.8.3.min.js"></script>-->
<script>
    var btn=document.getElementsByTagName("button");
    var leftp=document.getElementsByClassName("leftp")[0];
    var rightp=document.getElementsByClassName("rightp")[0];
    var pics=document.getElementsByClassName("pic")[0];
    var imgs=pics.getElementsByTagName("img")[0];
    var lis=document.getElementsByTagName("li");
    var span=document.getElementsByTagName("span")
    var numl=document.getElementsByClassName("numl")[0];
    var numr=document.getElementsByClassName("numr")[0]
    var type=true;
    btn[0].onclick=function(){
        type=true;
    }
    btn[1].onclick=function(){
        type=false;
    }
    var num=1;
    leftp.onclick=function(){
        leftp.style.opacity="0.5";
//        debugger;
         num--;
        if(type){
            if(num<=0){
                num=5;
            }
            //pics.innerHTML=num;
            imgs.src="img1/"+num+".jpg";
            span[num].style.display="block";
            //imgs[num].style.display="block"
            }else{
            if(num<=0) {
                num=1;
                alert("不能再减小了");
            };
            //pics.innerHTML=num;
            lis[num].style.display="block"
            imgs.src="img1/"+num+".jpg";
            //imgs[num].style.display="block"
        }
        num2()

    }
    rightp.onclick=function(){
        rightp.style.opacity="0.5";
        num++;
        if(type){
            if(num>5){
                num=1;
            }
            imgs.src="img1/"+num+".jpg";
            lis[num].style.display="block"
        }else{
            if(num>5){
                num=5;
                alert("不能再增加了");
            }
            imgs.src="img1/"+num+".jpg";
          lis[num].style.display="block"
        }
        num1();
    }

    var i=1;
    function num1(){
        i++;
        if(i<=5){
            var num2=parseInt(i);
            numl.innerHTML=num2;
        }else{
            i=1;
        }

    }
    function num2(){
        i--;
        if(i>=0&&i<=5){
            var num3=parseInt(i);
            numl.innerHTML=num3;

        }else{
            i=5;
        }

    }

.all{
    background: #F3F3F3;
    border-top:1px solid #AAAAAA;
    margin-top: 10px;
    position: relative;
}
.all div{
    height: 40px;
    line-height: 40px;
}
.line{
    position: absolute;
    top:30px;
    left:-100px;
    width:70px ;
    border-top: 2px solid #E4393C;
}
.text2:hover .line{
    animation: line 1s forwards;
}
@keyframes line{
    from{left:0;}
    to{left:12px;}
}


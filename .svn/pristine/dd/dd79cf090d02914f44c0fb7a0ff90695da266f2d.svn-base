<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title></title>
    <script src="js/vue.js"></script>
    <script src="js/vue1.0.js"></script>
</head>
<body>
<div class="box">
    <input type="button" @click="add" value="添加">
   <ul>
       <li v-for=" item in arr" track-by="$index">{{item}}</li>
   </ul>
</div>
</body>
<script>
    var vm=new Vue({
//        el:".box",
        aa:11,//自定义属性 不会显示
        data:{
            a:1,
            arr:['apple','orange','egg']
        },
        methods:{
            add:function(){
                this.arr.push('tomato');
            }
        }

    }).$mount(".box");
    vm.$el.style.background="red";//就是元素
    vm.$data.a//就是数据
    vm.$mount(".box");//手动挂载 等于el:".box"
    vm.$options.aa//获取自定义属性
    vm.$destroy//销毁对象
    vm.$log()//查看现在数据的状态
    //track-by="$index"用于重复数据的循环
</script>
</html>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="Generator" content="EditPlus®">
    <meta name="Author" content="">
    <meta name="Keywords" content="">
    <meta name="Description" content="">
    <title>仿QQ注册</title>
    <style>
        *{padding:0;margin:0;}
        body,html{font-family:"Microsoft YaHei",SimHei,"微软雅黑","黑体";}
        body{
            background:url(body.png) repeat-x;
        }
        h2,h3{
            font-weight:normal;
        }

        .container{
            width:956px;
            margin:0 auto;
        }
        .reg-top{
            background:url(bg_chs.png) repeat-x center top;
            height:109px;
        }
        .reg-box{
            height:700px;
            background:#f9fdff;
            border:1px #81add9 solid;
            border-top:0 none;
        }
        .reg-main{
            width:700px;
            margin:0 auto;
            padding:1px;
        }
        .reg-main h3{
            height:25px;
            line-height:25px;
            border-left:3px #59AfE4 solid;
            padding-left:10px;
            font-size:18px;
            margin-top:80px;
            color:#666;
        }
        .reg-form{
            border-top:1px #d7d7d7 solid;
            margin-top:10px;
        }
        .reg-input{
            height:36px;
            line-height:36px;
            margin-top:18px;
        }
        .reg-input label{
            float:left;
            width:100px;
            padding-right:8px;
            text-align:right;
            font-size:14px;
        }
        .reg-input input{
            float:left;
            width:280px;
            height:18px;
            line-height:18px;
            font-size:14px;
            padding:8px;
            border:1px #a8d2e7 solid;
        }
        .reg-input span{
            float:left;
            padding-left:10px;
            font-size:12px;
            color:#666;
        }
        #submit{
            width:180px;
            height:50px;
            font-size:24px;
            line-height:50px;
            text-align:center;
            color:#fff;
            margin-top:50px;
            margin-left:110px;
            border:0 none;
            background:#b6010e;
            font-family: "Microsoft YaHei",SimHei,"微软雅黑","黑体";
            cursor:pointer;
        }
        .reg-input.foucs-input input{
            border-color:#089efd;
        }
        .reg-input.error span{
            color:red;
        }
        .reg-input.error input{
            border-color:red;
        }
        label.error{
            width:auto;
            font-size:12px;
            color:yellow;
            margin-left:8px;
        }

    </style>
</head>
<body>
<div class="container">
    <h2 class="reg-top"></h2>
    <div class="reg-box">
        <div class="reg-main">
            <h3>登陆账号</h3>
            <form action="" method="post" class="reg-form" id="reg-form">
                <div class="reg-input">
                    <label>昵称</label>
                    <input type="text" name="nick" id="nick"/>

                </div>
                <div class="reg-input">
                    <label>密码</label>
                    <input type="password" name="psw" id="psw"/>
                </div>

                <div class="submit-box">
                    <button id="submit">立即登陆</button>
                    <input type="checkbox" class=" ji"/>记住密码
                </div>

            </form>
        </div>
    </div>
</div>
</body>
<script>
    var forms=document.getElementsByTagName("form")[0];
    var input=document.getElementsByTagName("input");
    if(localStorage.getItem("pass")){
        input[0].value=localStorage.getItem("name");
        input[1].value=localStorage.getItem("pass");
    }
    forms.onsubmit=function(){
        if(input[0].value==""||input[1].value==""){
            return false;
        }else if(input[2].checked){
            localStorage.setItem("name",input[0].value);
            localStorage.setItem("pass",input[1].value);

        }else{
            localStorage.removeItem("name");
            localStorage.removeItem("pass");
        }
    }
</script>
</html>

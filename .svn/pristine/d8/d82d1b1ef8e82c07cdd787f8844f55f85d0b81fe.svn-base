<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title></title>
    <style>
        .box{
            width:330px;
            height: 200px;
            position: relative;
            margin: 0 auto;

        }
        .box ul{
            list-style: none;
        }
       .box li{
           position: absolute;
           left: 0;
           top: 0;
       }
        .sz{
            width: 120px;
            height: 20px;
            position: absolute;
            left:200px;
            top:150px;
            z-index:5;
        }
        .sz p{
            float: left;
            width: 20px;
            height: 20px;
            line-height: 20px;
            border: 1px solid red;
            text-align: center;
            margin-left:2px;
            border-radius: 50%;
            background:#ccc;
            cursor: pointer;
        }
        .lis{
            z-index: 2;
        }
        .sz .red{
            background:red;
        }
        .sz .p1{
            background: red;
        }
    </style>
    <script src="js/jquery-1.8.3.min.js"></script>
    <script type="text/javascript">
        $(function(){
            var num=0;
            var time;
            vert=function(){
                num++;
                if(num>=5){
                    num=0;
                }
                //$("li").eq(num).css("display","block").siblings().css("display","none");
                //$("p").eq(num).css("background","red").siblings().css("background","#ccc");
                $("p").eq(num).addClass("red").siblings().removeClass("red");

                $("li").eq(num).fadeIn(2000).siblings().fadeOut(2000);

            };
            time=setInterval(vert,2000);
           /* $("li").hover(function(){
                clearInterval(time);
            },function(){
               time=setInterval(vert,2000);
            });*/

            $("p").click(function(){
                clearInterval(time);
                var index=$(this).index();
                num=index;
                $("li").eq(index).fadeIn(1500).siblings().fadeOut(1000);
                $(this).addClass("red").siblings().removeClass("red");
                time=setInterval(vert,4000);
            })
        })

    </script>
</head>
<body>
<div class="box">
    <ul>
        <li class="lis"><img src="img/1.jpg" width="330px" height="200px" ></li>
        <li><img src="img/2.jpg" width="330px" height="200px" ></li>
        <li><img src="img/3.jpg" width="330px" height="200px" ></li>
        <li><img src="img/4.jpg" width="330px" height="200px" ></li>
        <li><img src="img/5.jpg" width="330px" height="200px" ></li>
    </ul>
    <div class="sz">
        <p class="red">1</p>
        <p>2</p>
        <p>3</p>
        <p>4</p>
        <p>5</p>
    </div>
</div>


</body>
</html>
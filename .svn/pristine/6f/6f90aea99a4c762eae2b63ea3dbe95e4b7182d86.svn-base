<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title></title>
    <script src="js/vue.js"></script>
    <script src="js/vue-resource.js"></script>
</head>
<body>
<div class="box">
    <input type="button" value="按钮" @click="get()">
</div>
</body>
<script>
    var c=new Vue({//c==里面的this
        el:".box",
        data:{

        },
        methods:{
            get:function(){
                //get发送数据
                this.$http.post("post.php",{a:1,b:2},{
                    emulateJSON:true
                }).then(function(res){
                    alert(res.data);
                },function(res){
                    alert(res.status);
                })
            }

        }

    })
</script>
</html>